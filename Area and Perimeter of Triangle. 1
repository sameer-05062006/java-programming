import java.io.*;
import java.util.*;
import java.text.*;
import java.math.*;
import java.util.regex.*;

public class Solution {

    public static void main(String[] args) {
       Scanner obj = new Scanner(System.in);
        int f =obj.nextInt();
        int g =obj.nextInt();
        int h =obj.nextInt();
        int j =obj.nextInt();
        int k =obj.nextInt();
        double area =0.5*f*g;
        double peri =h+j+k;
        System.out.printf("Area of Triangle is %.2f",area);
        System.out.printf("\nPerimeter of Triangle is %.2f",peri);
    }
}
