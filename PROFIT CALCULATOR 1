import java.io.*;
import java.util.*;
import java.text.*;
import java.math.*;
import java.util.regex.*;

public class Solution {

    public static void main(String[] args) {
        Scanner obj = new Scanner(System.in);
        int s =obj.nextInt();
        int i =obj.nextInt();
        int a =obj.nextInt();
        double profit = (i - a) * s - 100;
        System.out.printf("Number of copies sold:%d",s);
        System.out.printf("\nCost of each copy:%d",i);
        System.out.printf("\nCost spent by agency on each newspaper:%d",a);
        System.out.printf("\nThe profit obtained is Rs.%.2f",profit);
    }
}
